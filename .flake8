[flake8]
max_line_length = 80
ignore =
    # Line too long
    E501,
    # module level import not at top of file
    E402,
    # line break before binary operator
    W503,
in-place = true
recursive = true
aggressive = 2
exclude =
    versioneer.py,
    docs/conf.py,
per-file-ignores =
    docker/ocs-util/dot_jupyter/jupyter_server_config.py:F821
